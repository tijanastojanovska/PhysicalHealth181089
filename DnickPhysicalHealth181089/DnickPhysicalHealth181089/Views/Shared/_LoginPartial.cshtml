@using Microsoft.AspNetCore.Identity
@inject SignInManager<PHUser> SignInManager
@inject UserManager<PHUser> UserManager

    <head>
        
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/v4-shims.css">

            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        </head>
  

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-warning btn-link text-dark">Logout <i class="fas fa-sign-out-alt"></i></button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link btn-warning text-dark" asp-area="Identity" asp-page="/Account/Register">Register  <i class="fa fa-user-plus" aria-hidden="true"></i></a>
    </li>
    
    <li class="nav-item" style="padding-left:4px; margin-left:4px">
        <a class="nav-link btn-warning text-dark" asp-area="Identity" asp-page="/Account/Login">Login <i class="fas fa-sign-in-alt"></i></a>
    </li>
}
</ul>
